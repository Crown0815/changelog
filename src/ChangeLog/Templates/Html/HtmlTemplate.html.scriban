<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Change Log</title>
</head>
<body>
    <div class="changelog">

        <div class="changelog-header">
            <h1>Change Log</h1>
        </div>

        <div class="changelog-content">
            {{~ for version_change_log in model.change_logs ~}}

                {{~ if !for.first ~}}
                <hr />
                {{~ end ~}}

                <div class="changelog-version">
                    <div class="changelog-version-header">
                        <h2>{{ version_change_log.version_display_name }}</h2>
                    </div>

                    <div class="changelog-version-content">
                        {{~ entryCount = enumerable.count(version_change_log.all_entries) ~}}
                        {{~ if entryCount == 0 ~}}
                            <i>No changes found.</i>
                        {{~ else if entryCount == 1 ~}}
                           {{ include 'entry' }}
                        {{~ else ~}}
                            <div class="changelog-version-summary">
                                {{ # TODO }}
                            </div>
                            <div class="changelog-version-details">
                                <div class="changelog-version-details-header">
                                    <h3>Details</h3>
                                </div>
                                <div class="changelog-version-details-content">
                                    {{~ for entry in version_change_log.all_entries ~}}
                                        {{ include 'entry' }}
                                    {{~ end ~}}
                                </div>
                            </div>
                        {{~ end ~}}
                    </div>
                </div>

            {{~ end ~}}
        </div>
    </div>
</body>
</html>
