{
  "$schema": "../../../schemas/configuration/schema.json",
  "changelog": {

    "entryTypes": {
      "feat": { "displayName": "New Features", "priority": 100 },
      "fix": { "displayName": "Bug Fixes", "priority": 90 }
    },

    "scopes": { },

    "footers": {
      "see-also" : { "displayName": "See Also" },
      "closes" : { "displayName": "Closes" },
      "fixes" : { "displayName": "Fixes" },
      "co-authored-by" : { "displayName": "Co-authored by" },
      "reviewed-by" : { "displayName": "Reviewed by" },
      "pull-request" : { "displayName": "Pull Request" },
      "merge-request": { "displayName": "Merge Request" }
    },

    "filter": {
      "include": [
        { "type": "feat" },
        { "type": "fix" }
      ],
      "exclude": []
    },

    "tagPatterns": [
      "^(?<version>\\d+\\.\\d+\\.\\d+.*)",
      "^v(?<version>\\d+\\.\\d+\\.\\d+.*)"
    ],

    "outputPath": "changelog.md",

    "integrations": {

      "provider": "None",

      "github": {
        "accessToken": null,
        "remoteName": "origin",
        "host": null,
        "owner": null,
        "repository": null
      },

      "gitlab": {
        "accessToken": null,
        "remoteName": "origin",
        "host": null,
        "namespace": null,
        "project": null
      }
    },

    "versionRange": null,

    "currentVersion": null,

    "template": {
      "name": "Default",

      "default": {
        "markdownPreset": "Default"
      }
    },

    "parser": {
      "mode" :  "Loose"
    }
  }
}
