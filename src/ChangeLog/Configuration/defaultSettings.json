{
  "$schema": "../../../schemas/configuration/schema.json",
  "changelog": {

    "entryTypes": [
      {
        "type": "feat",
        "displayName": "New Features"
      },
      {
        "type": "fix",
        "displayName": "Bug Fixes"
      }
    ],

    "scopes": [],

    "footers": [],

    "tagPatterns": [
      "^(?<version>\\d+\\.\\d+\\.\\d+.*)",
      "^v(?<version>\\d+\\.\\d+\\.\\d+.*)"
    ],

    "outputPath": "changelog.md",

    "integrations": {

      "provider": "None",

      "github": {
        "accessToken": null,
        "remoteName": "origin",
        "host": null,
        "owner": null,
        "repository": null
      },

      "gitlab": {
        "accessToken": null
      }
    },

    "versionRange": null,

    "currentVersion": null,

    "template": {
      "name": "Default",

      "default": {
        "markdownPreset": "Default"
      }
    },

    "parser": {
      "mode" :  "Loose"
    }
  }
}
